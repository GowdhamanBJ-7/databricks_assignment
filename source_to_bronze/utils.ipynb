    "def read_file(file_path, file_format, **options):\n",
    "    file_format = file_format.lower()\n",
    "\n",
    "    reader = spark.read.format(file_format)\n",
    "\n",
    "    for key, value in options.items():\n",
    "        reader = reader.option(key, value)\n",
    "\n",
    "    return reader.load(file_path)"
